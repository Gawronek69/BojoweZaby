@model List<BojoweZaby.Models.ItemModel>
@{
    ViewData["Title"] = "Equipment";
}


<link rel="stylesheet" href="~/css/site.css" />


<div class="user-list-container">
    <h2>All Items</h2>
    @if (Model.Count == 0)
    {
        <p>No items found ğŸ’§ğŸ¸ğŸ’§</p>
    }
    else
    {
         <table class="user-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rarity</th>
                <th>Base Attack</th>
                <th>Base Defense</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Rarity</td>
                    <td>@item.BaseAttack</td>
                    <td>@item.BaseDefense</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
    }
   
</div>