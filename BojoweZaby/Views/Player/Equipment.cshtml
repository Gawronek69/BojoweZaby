@model List<BojoweZaby.Models.EquipmentModel>
@{
    ViewData["Title"] = "Equipment";
}


<link rel="stylesheet" href="~/css/site.css" />


<div class="user-list-container">
    <h2>All Items</h2>
    @if (Model.Count == 0)
    {
        <p>No items found 💧🐸💧</p>
    }
    else
    {
         <table class="user-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rarity</th>
                <th>Base Attack</th>
                <th>Base Defense</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Item.Name</td>
                    <td>@item.Item.Rarity</td>
                    <td>@item.Item.BaseAttack</td>
                    <td>@item.Item.BaseDefense</td>
                    <td>@item.Item.Description</td>
                    <td>
                        <a class="button-action" asp-action="EatItem" asp-controller="Player" asp-route-eqId="@item.Id">Eat</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
   
</div>