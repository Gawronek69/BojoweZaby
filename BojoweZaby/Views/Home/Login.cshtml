

@{
    ViewBag.Title = "Frog Login";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="login-box">
    <h2>üê∏ Frog Login</h2>

    <form asp-action="Login" method="post">
        <input type="text" name="login" placeholder="Frog name" required />
        <input type="password" name="password" placeholder="Secret swamp code" required />
        <button type="submit">Hop In</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p class="message">@ViewBag.Error</p>
    }
</div>