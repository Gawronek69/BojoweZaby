@model List<BojoweZaby.Models.AccountModel>

<link rel="stylesheet" href="~/css/site.css" />

<div class="user-list-container">
    <h2>All Users</h2>
    <table class="user-table">
        <thead>
            <tr>
                <th>Login</th>
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Login</td>
                    <td>@user.Username</td>
                    <td>
                        <a class="btn-edit" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.AccountId">Edit</a>
                        <a class="btn-delete" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.AccountId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="add-user-container">
        <a class="btn-add" asp-controller="Admin" asp-action="UserCreation">Add New User</a>
    </div>
</div>