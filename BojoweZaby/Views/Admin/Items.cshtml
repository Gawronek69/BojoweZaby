@model List<BojoweZaby.Models.ItemModel>
@{
    ViewData["Title"] = "Items";
}


<link rel="stylesheet" href="~/css/site.css" />


<div class="user-list-container">
    <h2>All Items</h2>
    <table class="user-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rarity</th>
                <th>Base Attack</th>
                <th>Base Defense</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Rarity</td>
                    <td>@item.BaseAttack</td>
                    <td>@item.BaseDefense</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn-edit" asp-controller="Admin" asp-action="EditItem" asp-route-id="@item.ItemId">Edit</a>
                        <a class="btn-delete "asp-controller="Admin" asp-action="DeleteItem" asp-route-id="@item.ItemId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="add-user-container">
        <a class="btn-add" asp-controller="Admin" asp-action="ItemCreation">Add New Item</a>
    </div>
</div>